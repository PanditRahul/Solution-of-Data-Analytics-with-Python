from os import *
from sys import *
from collections import *
from math import *

## Read input as specified in the question.
## Print output as specified in the question.
n = int(input())
i = 1
while i <= n:
    spaces = 1
    while spaces <= n-i:
        print(" ", end="")
        spaces = spaces+1
    j = 1
    while j <= i:
        print(i+j-1, end="")
        j = j+1
    p = i-1
    while p >= 1:
        print(i+p-1, end="")
        p = p-1
    print()
    i = i+1
