from os import *
from sys import *
from collections import *
from math import *

## Read input as specified in the question.
## Print output as specified in the question.
n = int(input())
i = 1
n1 = (n+1)//2
while i <= n1:
    spaces = 1
    while spaces <= n1-i:
        print(" ", end="")
        spaces = spaces+1
    j = 1
    while j <= 2*i-1:
        print("*", end="")
        j = j+1
    print('')
    i = i+1
n2 = n1-1
i = n2
while i >= 1:
    spaces = 1
    while spaces <= n1-i:
        print(" ", end="")
        spaces = spaces+1
    j = 1
    while j <= 2*i-1:
        print("*", end="")
        j = j+1
    print('')
    i = i-1
